
<style>
.changecolorgray{
  color: #444444;
  line-height: 15px;
}
   
</style>

<div id="messageforimageuploaded">

<%if !messageforimageuploaded.blank?%>
  <%=messageforimageuploaded%>
<%end%>
</div>


<form target="upload_frame" method="post" enctype="multipart/form-data" action="/competitions/upload_exhibition_artwork/<%=exhibition_id%>" onsubmit="return  Checkfiles('add_the_artwork_to_competition','show_ajax_request<%=exhibition_id%>')" id="add_the_artwork_to_competition">

          <%=hidden_field_tag "exhibition_id",exhibition_id%>
          <div class="changecolorgray">
					<label>Title </label>
					</div>
							<input type="text"  id="artwork_title"  name="artwork[title]" style="width:310px;" >
<div class="changecolorgray">
							<label>Image</label>
</div>
							<input type="file" class="file" id="artwork_image" name="artwork[image]" size="27" >
			<div class="changecolorgray">
                   
					<label>Medium </label>
				</div>
						<input type="text" ajax="true" id="artwork_medium" itemclass="Artwork" name="artwork[medium]" style="width:310px;" >
				<div class="changecolorgray">		
					<label>
						Size <span style="font-size: 10px;">width (cm) x height (cm)  x depth (cm - 3d work only)</span>
					</label>
				</div>
					<font style="color:#444444">
					<input type="text" id="artwork_width" name="artwork[width]" style="width: 92px;"> x <input type="text" id="artwork_height" name="artwork[height]" style="width: 92px;"> x <input type="text" id="artwork_depth" name="artwork[depth]" style="width: 92px;"> 
<div class="changecolorgray">
					        <label>
					Edition <span style="font-size: 10px;">(if applicable)</span>
				</label>
</div>
					<input type="text" id="artwork_edition_name" name="artwork[edition_name]" style="width: 100px;"> of <input type="text" id="artwork_edition_number" name="artwork[edition_number]" style="width: 100px;">
			    </font>
      <div class="changecolorgray">         
				<label>Price </label>
			</div>

				<input type="text"  id="artwork_price"  name="artwork[price]"   style="clear:both;width: 100px;">
                                <br/>
                                  
				<input type="radio"  name="artwork[is_purchasable]" value=1 checked="checked"  style="display:none">
				
				<div class="changecolorgray" style="padding-top:5px;margin-top:5px;float:left">
		   	
				 <%#= submit_to_remote 'update_btn', 'Upload', :url => { :action => 'upload_exhibition_artwork' },
    :update => { :success => "" },:multipart=>true%>
    <%=submit_tag "Upload"%>
        </div>
                                <div style="display: none;padding-top:12px;" id="show_ajax_request<%=exhibition_id%>">
                                            <img height="20" src="/images/ajax-spinner.gif" alt="loading">
                                </div>
</form>

<iframe id='upload_frame' name="upload_frame" style="width:1px;height:1px;display:none"></iframe>

