
      <style>
      .changecolorgray{
        color: #444444;
        line-height: 15px;
      }
      </style>
      <%if !messageforimageuploaded.blank?%>
            <%=messageforimageuploaded%>
      <%end%>
       <form action="/competitions/create_exhibition_artwork" class="new_artwork" enctype="multipart/form-data" id="add_the_artwork_to_competition<%=updateimage.id%>" method="post" onsubmit="return Checkfiles('add_the_artwork_to_competition<%=updateimage.id%>')" target="upload_frame<%=updateimage.id%>">
              <%=hidden_field_tag "artwork_id",updateimage.id%>
                    <div class="changecolorgray">
                					<label>Title </label>
                     </div>
      							<input type="text" ajax="true" hint="Title of Item" id="artwork_title" itemclass="Artwork" name="artwork[title<%=updateimage.id%>]" style="width:310px;height:16px;"  validate="title" value="<%=updateimage.title%>">
          					<div class="changecolorgray">
            							<label>Image</label>
      							</div>
      							<input type="file" class="file" id="artwork_image" name="artwork[image<%=updateimage.id%>]" size="26" value="/images/original/missing.png">
                    <div class="changecolorgray">                   
					                    <label>Medium </label>
                    </div>
        						<input type="text" ajax="true" id="artwork_medium" itemclass="Artwork" name="artwork[medium<%=updateimage.id%>]" size="30" url="/admin/artworks/validate" validate="medium" value="<%=updateimage.medium%>" style="height:16px;">
                    <div class="changecolorgray">                   
              		    	<label>
						                   <span style="font-size: 10px;">width (cm) x height (cm)  x depth (cm - 3d work only)</span>
					              </label>
                    </div>
					          <font style="color: #444444;">
                  					<input type="text" id="artwork_width" name="artwork[width<%=updateimage.id%>]" style="width: 92px;height:16px;" value="<%=updateimage.width%>"> x <input type="text" id="artwork_height" name="artwork[height<%=updateimage.id%>]" style="width: 92px;height:16px;" value="<%=updateimage.height%>"> x <input type="text" id="artwork_depth" name="artwork[depth<%=updateimage.id%>]" style="width: 92px;height:16px;" value="<%=updateimage.depth%>"> 
			              <div class="changecolorgray"> 
					                      <label style="margin-right:50px">
					                            Edition <span style="font-size: 10px;">(if applicable)</span>
				                        </label>
                  			        <label>Price </label>                
                    </div>
                    
                    <input type="text" id="artwork_edition_name" name="artwork[edition_name<%=updateimage.id%>]" style="width: 50px;height:16px;" value="<%=updateimage.edition_name%>"> of <input type="text" id="artwork_edition_number" name="artwork[edition_number<%=updateimage.id%>]" style="width: 50px;height:16px;" value="<%=updateimage.edition_number%>">
          					
                <input type="text" ajax="true" id="artwork_price" itemclass="Artwork" name="artwork[price<%=updateimage.id%>]" style="width: 50px;height:16px;margin-left:17px;" url="/admin/artworks/validate" validate="price" value="<%=updateimage.price%>" >
                
                </font>
				      <div class="changecolorgray">
		            		<label>For Sale      Not For Sale</label>
				      </div>
    <div style="float:left;margin-right:50px;">				      
     <% if updateimage.is_purchasable %>
     	            <input type="radio" name="artwork[is_purchasable<%=updateimage.id%>]" value=1 checked="checked">&nbsp;&nbsp;&nbsp;&nbsp;
    	          	<input type="radio" name="artwork[is_purchasable<%=updateimage.id%>]" value=0>
     <%else%>
     	            <input type="radio" name="artwork[is_purchasable<%=updateimage.id%>]" value=1>&nbsp;&nbsp;&nbsp;&nbsp;
    	          	<input type="radio" name="artwork[is_purchasable<%=updateimage.id%>]" value=0 checked="checked">
     <%end%>
		</div>      		
				<div >
			   <button class="submitButton" type="submit" >
				  <span>Upload</span>
				</button>
        </div>
        <div style="clear:both">
        <img src="/uploaded_files/development/artwork/<%=updateimage.id%>/thumb/<%=updateimage.image_file_name%>" />
        </div>
        </form>



 </div>

