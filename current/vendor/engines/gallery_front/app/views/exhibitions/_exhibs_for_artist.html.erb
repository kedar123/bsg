<div id="container">
  <% if @profile %>
    <div id="description">
      <div id="content">
        <!--<%#= render :partial => 'artists/artists_name_left' %>-->
        <font size="6" color="white"><b><%= @profile.full_name %></b></font>
        <div id="exhibs_list">
          <%# = @exhibitions.map{ |e| link_to(e.title, "/#{params[:which]}/#{@profile.id}/exhibs/#{e.id}", :style => "color:white;") }.join(' | ') %>

					<% lists = @exhibitions.map{ |e| link_to(e.title, "/#{params[:which]}/#{@profile.id}/exhibs/#{e.id}", :style => "color:white;") } %>
					
					<ul>
							<%for list in lists%>
								<li><%= list%></li>
							<%end%>
					</ul>
        </div>
        <p>
          <%= @exhibition.title %>
        </p>
        <p>
          <%= @exhibition.description %>
        </p>
        <p>
          <%= link_to @profile.website, @profile.website, :style => "color:black;", :target => "_blank" %>
        </p>
      </div>
    </div>
    <div id="list">
      <% (@exhibition.artworks & @profile.user.private_workspace.artworks).each do |a| %>
        <%= render :partial => 'exhibitions/artwork_show', :object => a %>
      <% end %>
    </div>
  <% else %>
    <p></p>
  <% end %>
</div>
