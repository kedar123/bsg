  
<% blank_main_div(:title =>"Contacts list (#{@num} results)", :hsize => 'sixH') do %>
          
<table id="profiles">
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>State</th>
  </tr>
  </thead>

  <tbody>
<% @current_objects.each do |profile| %>
  <tr>
    <td><%=h profile.first_name %></td>
    <td><%=h profile.last_name %></td>
    <td><%=h profile.email_address %></td>
    <td><%=h profile.country_state %></td>
    <%if  profile.user.login != "admin"%>
    <td><%= link_to 'Show', admin_profile_path(profile.id) %></td>
   <%end%>
   <%if  profile.user.login != "admin"%>
    <td><%= link_to 'Modify', edit_admin_profile_path(profile.id) %></td>
  <%end%>
    <% if profile.user.nil? %>
      <td><%= link_to 'Delete', admin_profile_path(profile.id), :confirm => 'Are you sure ?', :method => :delete %></td>
    <% elsif profile.user.activation_code.to_s.size > 10 %>
      <td><%= link_to 'Delete', admin_user_path(profile.user.id), :confirm => 'Are you sure ?', :method => :delete %></td>
    <% else %>
    <%if  profile.user.login != "admin"%>
      <td><%= link_to (profile.user.activation_code=='locked' ? 'Unlock' : 'Lock'), locking_admin_user_path(profile.user_id) %></td>
      <%end%>
    <% end %>
  </tr>
<% end %>
  </tbody>
  <tfoot>
    <tr style="display:none;">
      <td colspan="5">
	            No rows match the filter...
      </td>
    </tr>
  </tfoot>

</table>

<% end %>


<div class="rightBlocks">
	<div class="itemShowRightBlock">
	    <div class="blockCornerLeft"></div><div class="blockElementHeader twoH">
			Actions
		</div><div class="blockCornerRight"></div>
	    <div class="blockElementBody">
	        <%= link_to I18n.t('user.new.add_user'), new_admin_user_path %><br /><br />
			Filter the list with text :<br />
			<input id="filter2"/><br /><br />
                        Filter the list by categories :<br />
                        <div style="padding:0 0 0 30px;">
                        <%#= link_to 'All', admin_profiles_path %>
                        <%# Category.all.each do |cat| %>
                          <%#= link_to cat.name, admin_profiles_path(:category => cat.id) %>
                        <%# end %>
                        <% form_for 'filter', :url => filter_admin_profiles_path, :html => { :method =>:post } do |f| %>
                          <%= select_tag "category_ids[]", options_from_collection_for_select(Category.all, 'id', 'name', :selected => @filters), :multiple => true, :size => 6 %>
                          <%= f.submit 'filter', :style => "width:115px;" %>
                        <% end %>
                        </div>
	    </div>
	</div>
</div>



<script>
  $(document).ready(function()
    {
      $("#profiles").tablesorter();
        <%#*$("#profiles").tablesorter({ sortList: [[0, 0]], widgets: ['zebra'] });%>

        <%#*$("#profiles tbody tr").quicksearch({%>
            <%#*labelText: 'Search: ',%>
            <%#*attached: '#profiles',%>
            <%#*position: 'before',%>
            <%#*delay: 100,%>
            <%#*loaderText: 'Loading...',%>
            <%#*onAfter: function() {%>
                <%#*if ($("#profiles tbody tr:visible").length != 0) {%>
                    <%#*$("#profiles").trigger("update");%>
                    <%#*$("#profiles").trigger("appendCache");%>
                    <%#*$("#profiles tfoot tr").hide();%>
                <%#*}%>
                <%#*else {%>
                    <%#*$("#profiles tfoot tr").show();%>
                <%#*}%>
            <%#*}%>
        <%#*});%>

    }
);
</script>
